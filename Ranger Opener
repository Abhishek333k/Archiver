@echo off
setlocal enabledelayedexpansion

:: Prompt user for input range
set /p "input_range=Enter the range (e.g., 1-3): "

:: Parse the input range
for /f "tokens=1,2 delims=-" %%a in ("%input_range%") do (
    set "start=%%a"
    set "end=%%b"
)

:: Initialize the command string for Firefox
set "firefox_command=start firefox"

:: Read each line from urls.txt and open matching URLs based on user input
set count=0
for /f "tokens=1,2,3 delims=: " %%i in (urls.txt) do (
    set /a count+=1
    if !count! geq !start! if !count! leq !end! (
        set "url=%%k"
        set "firefox_command=!firefox_command! -new-tab !url!"
    )
)

:: Execute the command to open all matching URLs in new tabs
!firefox_command!

:: Exit the script and close the Command Prompt window
exit

endlocal
